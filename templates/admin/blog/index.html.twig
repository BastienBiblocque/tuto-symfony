{% extends 'admin/base.html.twig' %}

{% block title %}Hello Admin!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col">
            <h1>Administration </h1>
        </div>
        <div class="col-auto">
            <a href="{{ path('admin_blog_create') }}" class="btn btn-info">Cr√©er un article</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Slug</th>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                        {% for article in articles %}
                        <tr>
                            <td>{{ article.id }}</td>
                            <td>{{ article.title }}</td>
                            <td>{{ article.slug }}</td>
                            <td>{{ article.pusbliedAt|date("d/m/y") }}</td>
                            <td>
                                <a href="{{ path('admin_blog_edit', {'id':article.id}) }}" class="btn btn-secondary">Modifier</a>
                                <a href="{{ path('admin_blog_delete', {'id':article.id}) }}" class="btn btn-danger">Supprimer</a>
                            </td>
                        </tr>
                        {% endfor %}
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
